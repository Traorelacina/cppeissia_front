{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    "jsx": "react-jsx",
    "types": ["vite/client"],

    /* üî• IMPORTANT : alias @ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* üî• IMPORTANT : compat Netlify */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* üî• IMPORTANT : JS support */
    "allowJs": true,
    "checkJs": false,

    /* Qualit√© */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* ‚ö†Ô∏è √©viter blocages inutiles en build */
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
